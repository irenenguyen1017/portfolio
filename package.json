{
  "name": "porfolio",
  "version": "1.0.0",
  "description": "Irene Nguyen's Porfolio",
  "main": "index.js",
  "scripts": {
    "compress:css": "node-sass ./src/styles/style.prefix.css ./src/styles/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass concat:css prefix:css compress:css",
    "compile:sass": "node-sass ./src/styles/sass/main.scss ./src/styles/style.comp.css",
    "concat:css": "concat -o src/styles/style.concat.css  src/styles/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' src/styles/style.concat.css -o src/styles/style.prefix.css",
    "dev:server": "live-server src",
    "watch:sass": "node-sass -rw src/styles/sass/*.scss src/styles/style.css",
    "prepare": "npx crlf --set=LF node_modules/.bin/live-server",
    "start": "npm-run-all --parallel dev:server watch:sass"
  },
  "repository": "git@github.com:irenenguyen1017/porfolio.git",
  "author": "Irene Nguyen <irenenguyen1017@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.4.8",
    "concat": "^1.0.3",
    "live-server": "^1.2.2",
    "node-sass": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.16",
    "postcss-cli": "^10.0.0"
  }
}
